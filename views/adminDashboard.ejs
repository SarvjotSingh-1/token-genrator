<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900 flex flex-col items-center justify-center h-screen text-white">
    <div class="bg-gray-800 p-8 rounded-lg shadow-lg w-96 text-center">
      <h2 class="text-3xl font-semibold mb-4">Welcome, Admin! </h2>
      <p class="text-gray-300 mb-6">You have logged in as Admin</p>

      <!-- Show Tokens Button -->
      <button
        onclick="window.location.href='/api/v1/alltokens'"
        class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-500 transition mb-4"
      >
        ðŸ“œ Show Tokens
      </button>

      <!-- Logout Button -->
      <button
        onclick="logout()"
        class="w-full bg-red-600 text-white py-2 rounded-lg hover:bg-red-500 transition"
      >
        ðŸšª Logout
      </button>
    </div>

    <script>
      function logout() {
        localStorage.removeItem("adminToken"); // Clear token
        window.location.href = "/api/v1/admin/login"; // Redirect to login
      }
    </script>
  </body>
</html>
